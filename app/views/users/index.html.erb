<% content_for :title, "Users" %>

<% @users.each do |user| %>
	<div class="user_panel">
		<div class="float-left">
			<img src="<%= user.avatar %>" alt="<%= user.name %>" title="<%= user.name %>" class="avatar" />
		</div>
		<div class="float-left">
			<p>
				<%= "#{user.name} (#{user.role.name})" %>
				<br />
				<%= mail_to user.email %>
			</p>
			<p>
	    		<%= link_to 'Go to profile', user %> | 
				<%= link_to 'Edit this user', edit_user_path(user) %> | 
				<%= link_to 'Delete this user', user, :confirm => 'Are you sure?', :method => :delete %>
			</p>
		</div>
	</div>
<% end %>

<div class="clear"></div>

<p>
	<%= link_to 'Create a new user', new_user_path %>
</p>